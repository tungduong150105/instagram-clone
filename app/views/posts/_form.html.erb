<%= form_for @post, html: { multipart: true } do |f| %>
  <div class="text-left mb-3">
    <%= f.label :image %>
    <%= f.file_field :image, class: "w-full" %>
    <%= f.hidden_field :image_cache %>
  </div>

  <div class="text-left">
    <%= f.label :description %>
    <%= f.text_area :description, class: "w-full" %>
  </div>

  <div class="">
    <%= f.submit "Save Post",
             class: "bg-green-500 ring-1 ring-green-500 rounded-md px-3 py-2" %>
  </div>

<% end %>
