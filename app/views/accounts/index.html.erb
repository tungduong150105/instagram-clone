<div class="container grid grid-cols-5 mt-3">

  <div class="col-span-3">
    <div class="pr-5">
      <% @posts.each do |post| %>

        <div class="ring-1 ring-gray-100 shadow-gray-200 shadow-xl mb-5">
          <div class="flex items-center ring-1 ring-gray-100 text-left pl-3 py-2 gap-2">
            <%= link_to image_tag(post.account.image.thumb.url, class: "img-circle"),
            profile_path(post.account.username) %>
            <%= link_to post.account.username,
            profile_path(post.account.username),
            class: "font-bold text-black" %>
          </div>

          <%= image_tag(post.image.url) %>

          <div class="px-3 pt-3" data-controller="post">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 hover:fill-red-500">
              <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
            </svg>
          </div>

          <div class="px-3 pt-3 pb-1">
            <%= link_to post.account.username, profile_path(post.account.username), class: "font-bold text-black" %>
            <p><%= post.total_likes %> likes<p>

            <%= post.description %>

            <p class="text-gray-500">
              <%= time_ago_in_words post.created_at %>
            </p>
          </div>

        </div>
      <% end %>
    </div>
  </div>

  <div>
    <div class="font-bold mb-2 flex items-center gap-2">
      <%= link_to image_tag(current_account.image.thumb.url, class: "img-circle"), profile_path(current_account.username) %>
      <%= current_account.username %>
    </div>
    <div class="text-gray-500">
      <%= current_account.full_name %>
    </div>
  </div>
</div>
